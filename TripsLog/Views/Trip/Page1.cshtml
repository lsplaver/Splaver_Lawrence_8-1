@model Trip
@{
    ViewData["Title"] = "Add Trip - Page 1";
}
@section SubHead
{
    <h2>Add Trip Destination and Dates</h2>
}

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input asp-for="Destination" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Accommodation">Accommodations</label>
        <input asp-for="Accommodation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate.Date">Start Date</label>
        <input asp-for="StartDate.Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate.Date">End Date</label>
        <input asp-for="EndDate.Date" class="form-control" />
    </div>
    @if (ViewBag.Accommodation != "")
    {
        <a class="btn btn-primary" asp-action="Add" asp-route-page="2">Next</a>
    }
    else
    {
        <a class="btn btn-primary" asp-action="Add" asp-route-page="3">Next</a>
    }
    <a asp-action="Cancel" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="TripId" />
</form>