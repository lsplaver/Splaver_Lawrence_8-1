@model Trip
@{
    ViewData["Title"] = "Add Trip - Page 1";
}
@section SubHead
{
    <h2>Add Trip Destination and Dates</h2>
}

<form asp-action="AddPage1" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input asp-for="Destination" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Accommodation">Accommodations</label>
        <input asp-for="Accommodation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input type="date" asp-for="StartDate" value="@DateTime.Today" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input type="date" asp-for="EndDate" value="@DateTime.Today" class="form-control" />
    </div>
    <input type="hidden" asp-for="TripId" />
