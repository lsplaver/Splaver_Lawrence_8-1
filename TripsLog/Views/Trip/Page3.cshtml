@model Trip
@{ 
    ViewData["Title"] = "Add Trip - Page 3";
}
@section SubHead
{
    <h2>Add Things To Do in @TempData.Peek("Destination")</h2>
}

<form asp-action="Add" method="post">
    <div class="form-group">
        <input asp-for="ThingToDo1" />
        <input asp-for="ThingToDo2" />
        <input asp-for="ThingToDo3" />
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a asp-action="Cancel" class="btn btn-primary">Cancel</a>
</form>